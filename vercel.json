{
  "version": 2,
  "builds": [
    {
      "src": "server/api.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "shared/**"
        ]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}